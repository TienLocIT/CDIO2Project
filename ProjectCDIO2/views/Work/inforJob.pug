  title Job Information
header.navbar-items
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    .container
      button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarTogglerDemo03', aria-controls='navbarTogglerDemo03', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      a.navbar-brand(href='#') Leaders
      #navbarTogglerDemo03.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item
            a.nav-link.active(aria-current='page', href='#') Home
          li.nav-item
            a.nav-link.active(aria-current='page', href='#') Find Jobs
          li.nav-item.dropdown
            a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
              | Create CV
            ul.dropdown-menu(aria-labelledby='navbarDropdown')
              li
                a.dropdown-item(href='#') CV template
              li
                a.dropdown-item(href='#') Design CV
              li
                hr.dropdown-divider
              li
                a.dropdown-item(href='#') Upload CV
        form.d-flex
          input.form-control.me-2(type='search', placeholder='Search', aria-label='Search')
          button.btn.btn-outline-light(type='submit') Search
main.container
  .btn-back
    a.btn-back__click(href='#')
      i.fas.fa-chevron-left
      label(onclick="location.href='/work'" style="cursor:pointer") Back to Applications
  .row
    .col-md-4.form-left
      .company__logo
        img(src=Job.ImageCompanyUrl, alt='')
      .company__name
        h3=Job.NameCompany
      .company__contact
        form
          .company__contact__address
            i.fas.fa-map-marker-alt
            label(for='')=Job.Location
            hr
    .col-md-8.form-right
      form
        .description__form
          form.description__infomation
            h4.description__infomation__tittle=Job.NameJob
            
            div(id="JobDescription")
              span.description__infomation__tag Job Description:
              ul 
                each des in Job.JobDescription 
                  li(type="circle")=des
                if (Job.YearOfExperiece!="")
                  li(type="circle")="YearOfExperience:"+Job.YearOfExperiece
                if (Job.JobType!="")
                  li(type="circle")="JobType:"+ Job.JobType
            div(id="JobRequiremnets")
              span.description__infomation__tag Job requirements:
              ul 
                each des in Job.JobRequirements
                  li(type="circle")=des
            .jobs__tag(style='margin-top:2% ')
                each des in Job.Skills 
                   span.jobs__tag__items(style="border:1px solid black;padding:0.2rem;margin-left:2%")=des
        div(style='text-align:center;margin-top:2%')
          a.btn__apply(href='#')
            button.btn.btn-danger(type='button') Apply Now
        .infomation__jobs
          h4.infomation__tittle__ttitems="Các công việc của "+NameCompany
        each job in Jobs
         .col-12.jobs__items
           form.jobs__items
             h4.jobs__items__tittle=job.NameJob
             .jobs__items__location
               i.fas.fa-map-marker-alt
               label(for='')=job.location
               span.location__status=job.JobType
             .jobs__tag(style='margin-top:2% ')
              each skill in job.Skills
               a(href='#')
                 span.jobs__tag__items(style='margin-left:2% ')=skill 
              a.btn__apply(href='#')
                button.btn.btn-danger(type='button') Apply Now
        hr.inline__form
