head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='../sass/style.css')
  link(rel='stylesheet' href='../stylesheets/stylesheets.css')
  link(rel='stylesheet' href='../fontawesome-free-5.15.3-web/fontawesome-free-5.15.3-web/css/all.css')
  link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap' rel='stylesheet')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6' crossorigin='anonymous')
  title Login
.container
  .login-form.row.align-items-center
    .col.mx-auto.image__left
      lottie-player(src='https://assets10.lottiefiles.com/packages/lf20_rycdh53q.json' background='transparent' speed='1' style='width: 480px; height: 480x;' loop='' autoplay='')
    .col.form-signin
      section.tittle__items
        h3 Wellcome to Startup
        p Sign in to your account
      section.manipulation-signin__items
        form.input__items(action='/auth/login' method='POST')
          -var a=values?values.name:""
            if a==""
                h2=userRequire
            else
                h2=userError
            .input__items__user
                input#username(type='text' placeholder='Username' name="name" value=values?values.name:"")
          -var a=values?values.password:""
            if a==""
                 h2=passwordrequire 
            else
                 h2=passworderror
            .input__items__pass
                input#password(type='password' placeholder='Password' name="password" value=values?values.password:"")
          .btn__checkbox
                .btn__checkbox__items
                    input#cb1(type='checkbox' name='')
                    label(for='cb1') Remember me
          .btn__signin
            button.btn() Sign In
        .items__forgot
        a.forgot__password(href='#') Forgot password?
      hr
      .link__signup
        h4
          | New User? 
          a.switch__signup(href='signup.html') Create an Account
script(src='https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js')
