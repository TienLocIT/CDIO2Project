  title Register
.container
  .login-form.row.align-items-center
    .col.form-signin
      section.tittle__items
        h3 Sign Up
      section.manipulation-signup__items
        form.input__items(action='/login' method='POST')
          .input__items__user
            input#name(type='text' placeholder='Username')
          .input__items__email
            input#username(type='text' placeholder='Email')
          .input__items__pass
            input#password(type='text' placeholder='Password')
          .input__items__re-pass
            input#password(type='text' placeholder='Re-enter password')
      .btn__signup
        button.btn(type='button') Sign Up
      .items__forgot
        a.forgot__password(href='#' s='') Forgot password?
      hr
      .link__signup
        h4
          | Already to member? 
          a.switch__signup(href='index.html') Sign In
